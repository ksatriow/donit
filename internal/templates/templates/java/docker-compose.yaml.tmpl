version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{.ProjectName}}
    ports:
      - "{{.Port}}:{{.Port}}"
    environment:
      - PORT={{.Port}}
      - JAVA_OPTS=-Xmx512m
    volumes:
      - .:/app
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{.Port}}/health"]
      interval: 30s
      timeout: 3s
      retries: 3
      start_period: 10s
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

